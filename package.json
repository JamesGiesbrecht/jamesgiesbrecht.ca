{
  "name": "james-giesbrecht",
  "version": "1.0.0",
  "description": "jamesgiesbrecht.ca",
  "scripts": {
    "start:docker": "docker-compose up --build ",
    "stop": "docker-compose down",
    "restart": "yarn stop && yarn start:docker",
    "build:docker": "docker build -t jamesgiesbrecht/james-giesbrecht-ca .",
    "deploy": "yarn build:docker && docker push jamesgiesbrecht/james-giesbrecht-ca",
    "deploy:local": "yarn run install:client && yarn run install:server && yarn run build && yarn run start:server:dev",
    "deploy:dev": "yarn run install:prod:client && yarn run install:prod:server && yarn run build && yarn run start:dev",
    "deploy:prod": "yarn run install:prod:client && yarn run install:prod:server && yarn run build && yarn run start:prod",
    "install:client": "cd client && yarn install",
    "install:server": "cd server && yarn install",
    "install:prod:client": "cd client && yarn ci",
    "install:prod:server": "cd server && yarn ci",
    "start": "yarn run start:server & yarn run start:client",
    "build": "cd client && npm run build",
    "start:client": "cd client && yarn start",
    "start:server": "cd server && yarn start",
    "start:dev": "NODE_ENV=dev PORT=3002 pm2 reload james-giesbrecht-node-dev --update-env",
    "start:prod": "pm2 reload james-giesbrecht-node",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JamesGiesbrecht/james-giesbrecht.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JamesGiesbrecht/james-giesbrecht/issues"
  },
  "homepage": "https://github.com/JamesGiesbrecht/james-giesbrecht#readme"
}
